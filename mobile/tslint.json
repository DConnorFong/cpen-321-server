{
    "extends": [
        "tslint:recommended",
        "tslint-react",
        "tslint-plugin-prettier",
        "tslint-config-prettier"
    ],
    "rules": {
        "curly": {
            "severity": "off"
        },
        "jsx-no-bind": {
            "severity": "off"
        },
        "jsx-no-lambda": {
            "severity": "off"
        },
        "semicolon": true,
        "ordered-imports": {
            "severity": "off"
        },
        "object-literal-sort-keys": {
            "severity": "off"
        },
        "prettier": true,
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template",
            "jsx-double"
        ]
    }
}
