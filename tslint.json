{
    "extends": [
        "tslint:recommended",
        "tslint-plugin-prettier",
        "tslint-config-prettier"
    ],
    "rules": {
        "no-console": {
            "severity": "warning"
        },
        "no-var-requires": {
            "severity": "off"
        },
        "object-literal-sort-keys": {
            "severity": "off"
        },
        "semicolon": true,
        "prettier": true,
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template",
            "jsx-double"
        ]
    }
}
